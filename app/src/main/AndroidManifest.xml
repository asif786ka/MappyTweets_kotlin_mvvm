<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.mappy.twitter">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />

    <application
        android:name="com.mappy.twitter.app.App"
        android:icon="@mipmap/mappytweet"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning"
        android:usesCleartextTraffic="true"
        tools:targetApi="m">
        <activity android:name=".ui.detail.DetailActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".ui.authenticate.AuthenticationActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleInstance"
            android:theme="@style/StartupTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.map.TwitterMapActivity"
            android:label="@string/title_activity_twitter_map"
            android:screenOrientation="portrait"/>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity android:name=".ui.search.SearchActivity"
            android:screenOrientation="portrait"/>
    </application>

</manifest>